<%= form_with(model: @recipe) do |form| %>
  <%= form.label :name, "Name:" %>
  <%=form.text_field :name%>

  <br>

  <%= form.label :category, "Category:" %>
  <%= form.select :category, @categories.collect {|cat| [cat.name, cat.id] } %>

  <br>

  <%= form.label :ingredients, "Ingredients:" %>
  <%= form.select :ingredients, @ingredients.collect {|ing| [ing.name, ing.id] } %>

  <br>

  <%= form.label :instructions, "Instructions:" %>
  <%= form.text_area :instructions, size: "70x5" %>

  <br>

  <%= form.submit "Save" %>
<% end %>
